<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<jasperReport name="InvoiceListRow" resourceBundle="book">
  <parameter class="java.lang.Integer" name="inpayment.number  "/>
  <parameter class="java.math.BigDecimal" name="inpayment.sum"/>
  <field class="java.lang.Integer" name="invoice.number"/>
  <field class="java.math.BigDecimal" name="invoice.currencyrate"/>
  <field class="java.lang.String" name="invoice.currency"/>
  <field class="java.math.BigDecimal" name="inpaymentrow.value"/>
  <field class="java.math.BigDecimal" name="inpaymentrow.currencyrate"/>
  <field class="java.math.BigDecimal" name="inpaymentrow.payed"/>
  <detail>
    <band height="12" splitType="Stretch">
      <!-- Number -->
      <element blankWhenNull="true" height="12" kind="textField" width="80" x="80" y="0">
        <expression><![CDATA[$F{invoice.number}]]></expression>
      </element>
      <!-- Invoice value -->
      <element blankWhenNull="true" height="12" kind="textField" pattern="#,##0.00" width="70" x="180" y="0">
        <expression><![CDATA[$F{inpaymentrow.value}]]></expression>
      </element>
      <!-- Invoice currency -->
      <element blankWhenNull="true" height="12" kind="textField" width="70" x="250" y="0">
        <expression><![CDATA[$F{invoice.currency}]]></expression>
      </element>
      <!-- Invoice currency rate -->
      <element blankWhenNull="true" height="12" kind="textField" pattern="#,##0.00" width="70" x="320" y="0">
        <expression><![CDATA[$F{invoice.currencyrate}]]></expression>
      </element>
      <!-- Inpayment currency rate -->
      <element blankWhenNull="true" height="12" kind="textField" pattern="#,##0.00" width="70" x="390" y="0">
        <expression><![CDATA[$F{inpaymentrow.currencyrate}]]></expression>
      </element>
      <!-- Inpayment sum  -->
      <element blankWhenNull="true" hTextAlign="Right" height="12" kind="textField" pattern="#,##0.00" width="50" x="480" y="0">
        <expression><![CDATA[$F{inpaymentrow.payed}]]></expression>
      </element>
    </band>
  </detail>
  <summary height="14" splitType="Prevent">
    <element height="1" kind="line" width="450" x="80" y="0"/>
    <element height="12" kind="textField" width="250" x="80" y="0">
      <expression><![CDATA[$R{inpaymentlistreport.sum}]]></expression>
    </element>
    <element blankWhenNull="false" hTextAlign="Right" height="12" kind="textField" pattern="#,##0.00" width="250" x="280" y="0">
      <expression><![CDATA[$P{inpayment.sum}]]></expression>
    </element>
  </summary>
</jasperReport>

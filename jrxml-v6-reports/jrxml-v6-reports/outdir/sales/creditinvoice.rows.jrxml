<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<jasperReport name="CreditInvoiceRows">
  <parameter class="java.lang.Boolean" name="creditinvoice.hasdiscount"/>
  <parameter class="java.awt.Image" name="invoice.qrcode"/>
  <field class="java.lang.String" name="row.number"/>
  <field class="java.lang.String" name="row.description"/>
  <field class="java.lang.Integer" name="row.count"/>
  <field class="java.lang.String" name="row.unit"/>
  <field class="java.math.BigDecimal" name="row.unitprice"/>
  <field class="java.math.BigDecimal" name="row.discount"/>
  <field class="java.math.BigDecimal" name="row.sum"/>
  <columnHeader height="14">
    <element height="1" kind="line" width="510" x="0" y="0"/>
    <element height="1" kind="line" width="510" x="0" y="13"/>
    <!-- Product number -->
    <element hTextAlign="Left" height="12" kind="textField" width="70" x="10" y="2">
      <expression><![CDATA[$R{creditinvoicereport.column.1}]]></expression>
    </element>
    <!-- Description -->
    <element blankWhenNull="true" hTextAlign="Left" height="12" kind="textField" width="90" x="80" y="2">
      <expression><![CDATA[$R{creditinvoicereport.column.2}]]></expression>
    </element>
    <!-- Unitprice -->
    <element blankWhenNull="true" hTextAlign="Right" height="12" kind="textField" width="70" x="250" y="2">
      <expression><![CDATA[$R{creditinvoicereport.column.3}]]></expression>
    </element>
    <!-- Count -->
    <element blankWhenNull="true" hTextAlign="Right" height="12" kind="textField" width="70" x="300" y="2">
      <expression><![CDATA[$R{creditinvoicereport.column.4}]]></expression>
    </element>
    <!-- Discount -->
    <element blankWhenNull="true" hTextAlign="Right" height="12" kind="textField" width="70" x="360" y="2">
      <expression><![CDATA[$R{creditinvoicereport.column.5}]]></expression>
    </element>
    <!-- Sum -->
    <element blankWhenNull="true" hTextAlign="Right" height="12" kind="textField" width="50" x="450" y="2">
      <expression><![CDATA[$R{creditinvoicereport.column.6}]]></expression>
    </element>
  </columnHeader>
  <detail>
    <band height="12" splitType="Stretch">
      <!-- Number -->
      <element blankWhenNull="true" height="12" kind="textField" width="70" x="10" y="0">
        <expression><![CDATA[$F{row.number}]]></expression>
      </element>
      <!-- Description -->
      <element blankWhenNull="true" height="12" kind="textField" width="250" x="80" y="0">
        <expression><![CDATA[$F{row.description}]]></expression>
      </element>
      <!-- Unitprice -->
      <element blankWhenNull="true" hTextAlign="Right" height="12" kind="textField" pattern="#,##0.00" width="70" x="250" y="0">
        <expression><![CDATA[$F{row.unitprice}]]></expression>
      </element>
      <!-- Count -->
      <element blankWhenNull="true" hTextAlign="Right" height="12" kind="textField" width="70" x="290" y="0">
        <expression><![CDATA[$F{row.count}]]></expression>
      </element>
      <!-- Unit -->
      <element blankWhenNull="true" hTextAlign="Left" height="12" kind="textField" width="18" x="362" y="0">
        <expression><![CDATA[$F{row.unit}]]></expression>
      </element>
      <!-- Discount -->
      <element blankWhenNull="true" hTextAlign="Right" height="12" kind="textField" pattern="#,##0.00" width="70" x="360" y="0">
        <expression><![CDATA[$F{row.discount}]]></expression>
      </element>
      <!-- % -->
      <element blankWhenNull="true" hTextAlign="Left" height="12" kind="textField" width="10" x="432" y="0">
        <expression><![CDATA[$F{row.discount} == null ? null : new String("%")]]></expression>
      </element>
      <!-- Row sum  -->
      <element blankWhenNull="true" hTextAlign="Right" height="12" kind="textField" pattern="#,##0.00" width="50" x="450" y="0">
        <expression><![CDATA[$F{row.sum}]]></expression>
      </element>
    </band>
  </detail>
  <pageFooter height="12">
    <!-- Number -->
    <element hTextAlign="Right" height="12" kind="textField" vTextAlign="Bottom" width="510" x="0" y="0">
      <expression><![CDATA[$R{creditinvoicereport.continuing}]]></expression>
    </element>
  </pageFooter>
  <lastPageFooter height="100">
    <!-- QR-code, right -->
    <element height="100" kind="image" onErrorType="Blank" vImageAlign="Bottom" width="100" x="410" y="0">
      <expression><![CDATA[$P{invoice.qrcode}]]></expression>
    </element>
  </lastPageFooter>
</jasperReport>

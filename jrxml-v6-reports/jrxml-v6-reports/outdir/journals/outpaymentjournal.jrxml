<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<jasperReport name="outpaymentJournal" resourceBundle="book">
  <parameter class="net.sf.jasperreports.engine.JasperReport" name="Report"/>
  <parameter class="java.util.HashMap" name="Parameters"/>
  <!-- Declared fields in the report. -->
  <field class="java.lang.Integer" name="outpayment.number"/>
  <field class="java.util.Date" name="outpayment.date"/>
  <field class="java.lang.String" name="outpayment.text"/>
  <field class="java.math.BigDecimal" name="outpayment.sum"/>
  <field class="java.math.BigDecimal" name="outpayment.localsum"/>
  <field class="net.sf.jasperreports.engine.JRDataSource" name="journal.rows"/>
  <!-- The sum. -->
  <variable calculation="Sum" class="java.math.BigDecimal" name="sum" resetType="Report">
    <expression><![CDATA[$F{outpayment.sum}]]></expression>
    <initialValueExpression><![CDATA[new BigDecimal(0.0)]]></initialValueExpression>
  </variable>
  <columnHeader height="30">
    <element height="1" kind="line" width="510" x="20" y="23"/>
    <!-- Column 1 -->
    <element height="24" kind="textField" width="80" x="20" y="0">
      <expression><![CDATA[$R{outpaymentjournal.column.1}]]></expression>
    </element>
    <element height="24" kind="textField" width="80" x="80" y="0">
      <expression><![CDATA[$R{outpaymentjournal.column.2}]]></expression>
    </element>
    <element height="24" kind="textField" width="70" x="140" y="0">
      <expression><![CDATA[$R{outpaymentjournal.column.3}]]></expression>
    </element>
    <element hTextAlign="Left" height="24" kind="textField" width="50" x="270" y="0">
      <expression><![CDATA[$R{outpaymentjournal.column.4}]]></expression>
    </element>
    <element hTextAlign="Left" height="24" kind="textField" width="50" x="320" y="0">
      <expression><![CDATA[$R{outpaymentjournal.column.5}]]></expression>
    </element>
    <element hTextAlign="Right" height="24" kind="textField" width="80" x="370" y="0">
      <expression><![CDATA[$R{outpaymentjournal.column.6}]]></expression>
    </element>
    <element hTextAlign="Right" height="24" kind="textField" width="80" x="450" y="0">
      <expression><![CDATA[$R{outpaymentjournal.column.7}]]></expression>
    </element>
  </columnHeader>
  <detail>
    <band height="39" splitType="Stretch">
      <!-- outpayment number -->
      <element height="14" kind="textField" width="30" x="20" y="0">
        <expression><![CDATA[$F{outpayment.number}]]></expression>
      </element>
      <!-- outpayment text -->
      <element blankWhenNull="true" height="14" kind="textField" width="220" x="80" y="0">
        <expression><![CDATA[$F{outpayment.text}]]></expression>
      </element>
      <!-- outpayment date -->
      <element hTextAlign="Right" height="14" kind="textField" pattern="yyyy-MM-dd" width="80" x="450" y="0">
        <expression><![CDATA[$F{outpayment.date}]]></expression>
      </element>
      <!-- Order rows -->
      <element height="0" kind="subreport" usingCache="false" width="555" x="0" y="12">
        <parametersMapExpression><![CDATA[new java.util.HashMap() {{ put("outpayment.number", $F{outpayment.number}); }}]]></parametersMapExpression>
        <dataSourceExpression><![CDATA[$F{journal.rows}]]></dataSourceExpression>
        <expression><![CDATA[$P{Report}]]></expression>
      </element>
      <element height="14" kind="frame" width="555" x="0" y="12">
        <element height="1" kind="line" width="450" x="80" y="0"/>
        <element hTextAlign="Left" height="12" kind="textField" width="120" x="350" y="0">
          <expression><![CDATA[$R{outpaymentjournal.totalsum}]]></expression>
        </element>
        <element hTextAlign="Right" height="12" kind="textField" pattern="#,##0.00" width="60" x="470" y="0">
          <expression><![CDATA[$F{outpayment.sum}]]></expression>
        </element>
      </element>
    </band>
  </detail>
  <summary height="20">
    <element backcolor="#000000" height="2" kind="rectangle" width="510" x="20" y="0"/>
    <element height="14" kind="textField" width="250" x="20" y="2">
      <expression><![CDATA[$R{outpaymentjournal.totalsum}]]></expression>
    </element>
    <!-- Total sum-->
    <element blankWhenNull="true" hTextAlign="Right" height="14" kind="textField" pattern="#,##0.00" width="80" x="450" y="2">
      <expression><![CDATA[$V{sum} != null ? $V{sum} : new BigDecimal(0.0)]]></expression>
    </element>
  </summary>
</jasperReport>

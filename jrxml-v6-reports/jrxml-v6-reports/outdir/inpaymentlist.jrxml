<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<jasperReport name="InpaymentList" resourceBundle="book">
  <parameter class="net.sf.jasperreports.engine.JasperReport" name="Report"/>
  <parameter class="java.util.HashMap" name="Parameters"/>
  <!-- Declared fields in the report. -->
  <field class="java.lang.Integer" name="inpayment.number"/>
  <field class="java.lang.String" name="inpayment.date"/>
  <field class="java.lang.String" name="inpayment.text"/>
  <field class="java.math.BigDecimal" name="inpayment.sum"/>
  <field class="net.sf.jasperreports.engine.JRDataSource" name="inpayment.rows"/>
  <!-- The sum. -->
  <variable calculation="Sum" class="java.math.BigDecimal" name="sum" resetType="Report">
    <expression><![CDATA[$F{inpayment.sum}]]></expression>
    <initialValueExpression><![CDATA[new BigDecimal(0.0)]]></initialValueExpression>
  </variable>
  <columnHeader height="30">
    <element height="1" kind="line" width="510" x="20" y="23"/>
    <!-- Faktura nr -->
    <element height="24" kind="textField" width="80" x="20" y="0">
      <expression><![CDATA[$R{inpaymentlistreport.column.1}]]></expression>
    </element>
    <element height="24" kind="textField" width="70" x="80" y="0">
      <expression><![CDATA[$R{inpaymentlistreport.column.2}]]></expression>
    </element>
    <element height="24" kind="textField" width="70" x="180" y="0">
      <expression><![CDATA[$R{inpaymentlistreport.column.3}]]></expression>
    </element>
    <element height="24" kind="textField" width="70" x="250" y="0">
      <expression><![CDATA[$R{inpaymentlistreport.column.4}]]></expression>
    </element>
    <element height="24" kind="textField" width="70" x="320" y="0">
      <expression><![CDATA[$R{inpaymentlistreport.column.5}]]></expression>
    </element>
    <element height="24" kind="textField" width="70" x="390" y="0">
      <expression><![CDATA[$R{inpaymentlistreport.column.6}]]></expression>
    </element>
    <element hTextAlign="Right" height="24" kind="textField" width="70" x="460" y="0">
      <expression><![CDATA[$R{inpaymentlistreport.column.7}]]></expression>
    </element>
  </columnHeader>
  <detail>
    <band height="30" splitType="Stretch">
      <!-- Title -->
      <element height="14" kind="textField" width="30" x="20" y="0">
        <expression><![CDATA[$F{inpayment.number}]]></expression>
      </element>
      <!-- Customer nr -->
      <element height="14" kind="textField" width="200" x="80" y="0">
        <expression><![CDATA[$F{inpayment.text}]]></expression>
      </element>
      <!-- Date -->
      <element hTextAlign="Right" height="14" kind="textField" width="60" x="470" y="0">
        <expression><![CDATA[$F{inpayment.date}]]></expression>
      </element>
      <!-- Order rows -->
      <element height="0" kind="subreport" usingCache="false" width="575" x="0" y="12">
        <parametersMapExpression><![CDATA[new java.util.HashMap() {{ put("inpayment.number", $F{inpayment.number}); put("inpayment.sum", $F{inpayment.sum}); }}]]></parametersMapExpression>
        <dataSourceExpression><![CDATA[$F{inpayment.rows}]]></dataSourceExpression>
        <expression><![CDATA[$P{Report}]]></expression>
      </element>
    </band>
  </detail>
  <summary height="20">
    <element backcolor="#000000" height="2" kind="rectangle" width="510" x="20" y="0"/>
    <element height="14" kind="textField" width="250" x="20" y="2">
      <expression><![CDATA[$R{inpaymentlistreport.sum}]]></expression>
    </element>
    <!-- Total sum-->
    <element blankWhenNull="true" hTextAlign="Right" height="14" kind="textField" pattern="#,##0.00" width="80" x="450" y="2">
      <expression><![CDATA[$V{sum}]]></expression>
    </element>
  </summary>
</jasperReport>
